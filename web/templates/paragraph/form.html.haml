- form_for @changeset, @action, fn f ->
  - if @changeset.action do
    .alert.alert-danger
      %p
        Oops, something went wrong! Please check the errors below.

  .form-group
    = label f, :body, class: "control-label"
    = textarea f, :body, class: "form-control", autofocus: true
    = error_tag f, :body

  .form-group
    = label f, :bullet, class: "control-label"
    = checkbox f, :bullet, class: "form-control"
    = error_tag f, :bullet

  .form-group
    = submit "Submit", class: "btn btn-primary"
